<div class="home_bg">
  <div class="home_div w3-animate-right">
    <div><%= image_tag ("cem-logo-full.png") %></div>
    <h1 class="login-title title mt-4">CEM ITS L10 MEETING</h1>
    <div class="login_container">
      <p>Log in to ITS L10 Meeting</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
        <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  
        <div class="field">
          <b><%= f.label :email %></b>
          <div><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter email",class:"w-100 px-2" %></div>
        </div>
      
        <div class="field mt-2">
          <b><%= f.label :password %><br /></b>
          <div><%= f.password_field :password, autocomplete: "current-password", placeholder:"Enter password",class:"w-100 px-2" %></div>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions mt-3">
          <%= f.submit "Log in", class:"continue-btn" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= link_to "<-- go back", root_path, method: :ge, class:"back-btn" %>
      </div>
    </div>
  </div>
</div>
  
  <script>
    var error = document.querySelector("#flash_alert");
  
    if (error.childNodes.length === 0) {
      console.log('Element is empty');
    } else {
      error.classList.add("alert");
      error.classList.add("alert-danger");
    }
  </script>
